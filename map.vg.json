{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Unemployment Rate across Countries",
    "projection": {"type": "equalEarth"},
    "layer": [
        {
            "data": {
                "url": "countryLayout.topojson",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data":{
                            "url": "unemployment.csv"
                        },
                        "key": "country",
                        "fields": ["unemployment_percentage"]
                    }
                },
                {
                    "lookup": "properties.NAME",
                    "from":{
                        "data":{
                            "url": "literacy_rate.csv"
                        },
                        "key": "country",
                        "fields": ["literacy_rate_percent_all"]
                    }
                }
            ],
            "mark": {"type": "geoshape"},
            "encoding": {
                "color":{
                    "title": "Unemployment Percentage (%)",
                    "field": "unemployment_percentage",
                    "type": "quantitative",
                    "scale": {"type": "log"}
                },
                "tooltip": [
                    {"field": "properties.NAME", "type": "nominal", "title": "Country"},
                    {"field": "unemployment_percentage", "type": "quantitative", "title": "Unemployment Rate (%)"},
                    {"field": "literacy_rate_percent_all", "type": "quantitative", "title": "Literacy Rate (%)"}
                ]
            }
            
        },
        {
            "data": {
                "url": "countryLayout.topojson",
                "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        }
    ]
    
}